{
  "name": "higgs-domino-fullstack",
  "version": "1.0.0",
  "description": "Full-stack Higgs Domino game server with real-time multiplayer, analytics, payments, and comprehensive backend services",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:websocket": "nodemon websocket_server.js",
    "cluster": "cross-env CLUSTER_MODE=true NODE_ENV=production node server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "db:backup": "node scripts/backup.js",
    "cache:clear": "node scripts/clear-cache.js",
    "logs:clear": "node scripts/clear-logs.js",
    "health:check": "node scripts/health-check.js",
    "metrics:export": "node scripts/export-metrics.js",
    "build": "npm run lint && npm run test",
    "deploy": "npm run build && npm run db:migrate",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "docker:build": "docker build -t higgs-domino .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 higgs-domino",
    "security:audit": "npm audit && node scripts/security-scan.js",
    "performance:test": "node scripts/performance-test.js",
    "load:test": "artillery run load-test.yml"
  },
  "keywords": [
    "domino",
    "game",
    "multiplayer",
    "real-time",
    "websocket",
    "nodejs",
    "express",
    "postgresql",
    "redis",
    "socket.io",
    "payment",
    "analytics",
    "fullstack"
  ],
  "author": "Higgs Domino Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "prom-client": "^14.2.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "uuid": "^9.0.0",
    "crypto": "^1.0.1",
    "geoip-lite": "^1.4.7",
    "user-agents": "^1.0.1",
    "nodemailer": "^6.9.4",
    "firebase-admin": "^11.10.1",
    "stripe": "^13.5.0",
    "paypal-rest-sdk": "^1.8.1",
    "axios": "^1.5.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "exceljs": "^4.3.0",
    "pdfkit": "^0.13.0",
    "html-pdf": "^3.0.1",
    "handlebars": "^4.7.8",
    "joi": "^17.9.2",
    "lodash": "^4.17.21",
    "lru-cache": "^10.0.1",
    "compression": "^1.7.4",
    "http-proxy-middleware": "^2.0.6",
    "cross-env": "^7.0.3",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^3.0.2",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "artillery": "^2.0.0",
    "faker": "^6.6.6",
    "@types/node": "^20.5.7"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!logs/**",
      "!scripts/**",
      "!tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "consistent-return": "off",
      "no-underscore-dangle": "off",
      "max-len": [
        "error",
        {
          "code": 120
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/higgs-domino-fullstack.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/higgs-domino-fullstack/issues"
  },
  "homepage": "https://github.com/your-org/higgs-domino-fullstack#readme"
}